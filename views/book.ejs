<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= book.title %> - TT Book
    </title>
    <link rel="stylesheet" href="/stylesheets/UI.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- Navigation Header -->
    <header>
        <div class="logo">
            <h1><a href="/" style="text-decoration: none; color: inherit;"><i class="fas fa-book"></i> TT Book</a></h1>
        </div>
        <nav class="navigation">
            <a href="/">Home</a>
            <a href="/#reviews">Reviews</a>
            <a href="/#categories">Categories</a>
        </nav>
        <div class="actions">
            <!-- Simplified actions for sub-page -->
            <a href="/" class="read-more-btn" style="text-decoration: none;">Back to Home</a>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <div class="featured-review" style="margin-top: 40px;">
                <div class="featured-book-cover">
                    <img src="<%= book.image %>" alt="<%= book.title %>"
                        onerror="this.src='https://via.placeholder.com/300x450'">
                    <div class="rating-badge">
                        <i class="fas fa-star"></i>
                        <span>
                            <%= book.rating %>
                        </span>
                    </div>
                </div>
                <div class="featured-review-content">
                    <h3>
                        <%= book.title %>
                    </h3>
                    <div class="book-meta">
                        <span class="author"><i class="fas fa-user"></i>
                            <%= book.author %>
                        </span>
                        <!-- Link to category filter on home page -->
                        <span class="genre">
                            <a href="/?category=<%= book.genre %>" style="color: inherit; text-decoration: none;">
                                <i class="fas fa-tag"></i>
                                <%= book.category %>
                            </a>
                        </span>
                        <span class="date"><i class="fas fa-calendar"></i> Published: <%= book.publishedYear %></span>
                    </div>

                    <div class="rating">
                        <div class="stars">
                            <% for(let i=0; i<Math.floor(book.rating); i++) { %>
                                <i class="fas fa-star"></i>
                                <% } %>
                                    <% if(book.rating % 1 !==0) { %>
                                        <i class="fas fa-star-half-alt"></i>
                                        <% } %>
                        </div>
                        <span class="rating-text">
                            <%= book.rating %> / 5.0
                        </span>
                    </div>

                    <div class="review-text">
                        <p>
                            <%= book.review %>
                        </p>
                    </div>

                    <div class="review-footer">
                        <div class="reviewer">
                            <div class="reviewer-avatar">
                                <%= book.reviewer.substring(0,2).toUpperCase() %>
                            </div>
                            <div class="reviewer-info">
                                <div class="reviewer-name">
                                    <%= book.reviewer %>
                                </div>
                                <div class="review-date">Reviewed on <%= book.reviewDate %>
                                </div>
                            </div>
                        </div>
                        <a href="/books/<%= book.id %>/edit" class="read-more-btn" style="text-decoration: none;">Edit
                            Review</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3><i class="fas fa-book"></i> TT Book</h3>
                    <p>Your trusted source for honest book reviews.</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 TT Book. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>

</html>
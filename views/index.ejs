<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TT Book - Book Reviews</title>
    <link rel="stylesheet" href="/stylesheets/UI.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- Navigation Header -->
    <header>
        <div class="logo">
            <h1><i class="fas fa-book"></i> TT Book</h1>
        </div>
        <nav class="navigation">
            <a href="#home">Home</a>
            <a href="#reviews">Reviews</a>
            <a href="#categories">Categories</a>
            <a href="/create-book">Add Book</a>
        </nav>
        <div class="actions">
            <div class="search-container">
                <input type="text" id="search-box" placeholder="Search for books..." oninput="handleSearch()"
                    role="combobox" aria-expanded="false" aria-controls="search-result" autocomplete="off">
                <button class="search-button" onclick="handleSearch()"><i class="fas fa-search"></i></button>
                <div id="search-result" class="search-result"></div>
            </div>
            <button class="buttonlogin" id="loginButton" type="button" onclick="handleLogin()">Log in</button>
            <button class="buttonlogout" id="logoutButton" type="button" style="display: none"
                onclick="handleLogout()">Log out</button>
            <span id="userGreeting" class="user-greeting" style="display: none"></span>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="hero-content">
            <h2>Welcom to TT Book</h2>
            <p>Honest reviews, thoughtful insights, and curated recommendations</p>
        </div>
    </section>

    <!-- Categories Filter -->
    <section class="categories" id="categories">
        <div class="container">
            <h3>Browse by Category</h3>
            <div class="category-tags">
                <button class="category-tag active" data-category="all" onclick="filterByCategory('all')">All</button>
                <button class="category-tag" data-category="fiction"
                    onclick="filterByCategory('fiction')">Fiction</button>
                <button class="category-tag" data-category="non-fiction"
                    onclick="filterByCategory('non-fiction')">Non-Fiction</button>
                <button class="category-tag" data-category="mystery"
                    onclick="filterByCategory('mystery')">Mystery</button>
                <button class="category-tag" data-category="sci-fi" onclick="filterByCategory('sci-fi')">Sci-Fi</button>
                <button class="category-tag" data-category="romance"
                    onclick="filterByCategory('romance')">Romance</button>
                <button class="category-tag" data-category="biography"
                    onclick="filterByCategory('biography')">Biography</button>
                <button class="category-tag" data-category="self-help"
                    onclick="filterByCategory('self-help')">Self-Help</button>
                <button class="category-tag" data-category="programming"
                    onclick="filterByCategory('programming')">Programming</button>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content" id="reviews">
        <div class="container">
            <!-- Featured Review Section -->
            <!-- Featured Review Section -->
            <section class="featured-section">
                <h2 class="section-title"><i class="fas fa-star"></i> Featured Review</h2>
                <% if (featuredBook) { %>
                    <div class="featured-review">
                        <div class="featured-book-cover">
                            <img src="<%= featuredBook.image %>" alt="Featured Book"
                                onerror="this.src='https://via.placeholder.com/300x450/2c3e50/ffffff?text=<%= encodeURIComponent(featuredBook.title) %>'">
                            <div class="rating-badge">
                                <i class="fas fa-star"></i>
                                <span>
                                    <%= featuredBook.rating %>
                                </span>
                            </div>
                        </div>
                        <div class="featured-review-content">
                            <h3>
                                <%= featuredBook.title %>
                            </h3>
                            <div class="book-meta">
                                <span class="author"><i class="fas fa-user"></i>
                                    <%= featuredBook.author %>
                                </span>
                                <span class="genre"><i class="fas fa-tag"></i>
                                    <%= featuredBook.category || featuredBook.genre %>
                                </span>
                                <span class="date"><i class="fas fa-calendar"></i> Published: <%=
                                        featuredBook.publishedYear %></span>
                            </div>
                            <div class="rating">
                                <div class="stars">
                                    <% for(let i=0; i<Math.floor(featuredBook.rating); i++) { %>
                                        <i class="fas fa-star"></i>
                                        <% } %>
                                            <% if(featuredBook.rating % 1 !==0) { %>
                                                <i class="fas fa-star-half-alt"></i>
                                                <% } %>
                                </div>
                                <span class="rating-text">
                                    <%= featuredBook.rating %> / 5.0
                                </span>
                            </div>
                            <div class="review-text">
                                <p>
                                    <%= featuredBook.review %>
                                </p>
                            </div>
                            <div class="review-footer">
                                <div class="reviewer">
                                    <div class="reviewer-avatar">
                                        <%= (featuredBook.reviewer || 'A' ).substring(0,2).toUpperCase() %>
                                    </div>
                                    <div class="reviewer-info">
                                        <div class="reviewer-name">
                                            <%= featuredBook.reviewer || 'Anonymous' %>
                                        </div>
                                        <div class="review-date">Reviewed on <%= featuredBook.reviewDate %>
                                        </div>
                                    </div>
                                </div>
                                <button class="read-more-btn" onclick="viewFullReview('<%= featuredBook.id %>')">Read
                                    Full Review</button>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                        <div style="text-align: center; padding: 40px; color: #666;">
                            <p>No featured reviews available yet.</p>
                        </div>
                        <% } %>
            </section>

            <!-- All Reviews Section -->
            <section class="reviews-section">
                <h2 class="section-title"><i class="fas fa-book-open"></i> Latest Reviews</h2>
                <div class="reviews-grid" id="reviews-grid">
                    <!-- Review cards will be dynamically generated by JavaScript -->
                </div>
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3><i class="fas fa-book"></i> TT Book</h3>
                    <p>Your trusted source for honest book reviews and literary recommendations.</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="#home">Home</a></li>
                        <li><a href="#reviews">Reviews</a></li>
                        <li><a href="#categories">Categories</a></li>
                        <li><a href="#about">About</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Follow Us</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-goodreads"></i></a>
                    </div>
                </div>
                <div class="footer-section">
                    <h4>Contact</h4>
                    <p><i class="fas fa-envelope"></i> 25560064@gm.uit.edu.vn or 25560059@gm.uit.edu.vn</p>
                    <p><i class="fas fa-phone"></i> +84 0927648893 </p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 TT Book. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Book detail modal -->
    <div id="book-modal" class="modal" aria-hidden="true">
        <div class="modal-overlay" id="modal-overlay"></div>
        <div class="modal-content" role="dialog" aria-modal="true" aria-labelledby="modal-title">
            <button class="modal-close" id="modal-close" aria-label="Close">&times;</button>
            <div class="modal-body" id="modal-body">
                <!-- Populated by JS -->
            </div>
        </div>
    </div>

    <script src="/javascripts/script.js"></script>
</body>

</html>